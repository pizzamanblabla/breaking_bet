<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Bet" table="bet">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="date" type="datetime" column="date" nullable="false"/>
    <field name="eventId" type="integer" column="event_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="rateTeamOne" type="float" column="rate_team_one" precision="10" scale="0" nullable="false"/>
    <field name="rateTeamTwo" type="float" column="rate_team_two" precision="10" scale="0" nullable="false"/>
    <field name="rateDraw" type="float" column="rate_draw" precision="10" scale="0" nullable="false"/>
    <field name="rateNeitherTeamOne" type="float" column="rate_neither_team_one" precision="10" scale="0" nullable="false"/>
    <field name="rateNeitherTeamTwo" type="float" column="rate_neither_team_two" precision="10" scale="0" nullable="false"/>
    <field name="rateNeitherDraw" type="float" column="rate_neither_draw" precision="10" scale="0" nullable="false"/>
    <field name="coefficientOne" type="float" column="coefficient_one" precision="10" scale="0" nullable="false"/>
    <field name="coefficientTwo" type="float" column="coefficient_two" precision="10" scale="0" nullable="false"/>
    <field name="allowanceOne" type="float" column="allowance_one" precision="10" scale="0" nullable="false"/>
    <field name="allowanceTwo" type="float" column="allowance_two" precision="10" scale="0" nullable="false"/>
    <field name="total" type="float" column="total" precision="10" scale="0" nullable="false"/>
    <field name="totalLess" type="float" column="total_less" precision="10" scale="0" nullable="false"/>
    <field name="totalMore" type="float" column="total_more" precision="10" scale="0" nullable="false"/>
  </entity>
</doctrine-mapping>
